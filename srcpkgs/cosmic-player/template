# Template file for 'cosmic-player'
pkgname=cosmic-player
version=1.0.0.beta.7
revision=1
_tag=epoch-${version/.beta/-beta}
wrksrc=${pkgname}-${version}
build_style=cargo
build_options="sccache"
hostmakedepends="pkg-config just cargo cargo-auditable"
makedepends="libxkbcommon-devel gstreamer1-devel gst-plugins-base1-devel $(vopt_if sccache "rust-sccache")"
depends="libxkbcommon gst-plugins-base1 gst-plugins-good1"
short_desc="TODO: cosmic-player short_desc"
maintainer="Bella Wagner <belladev109@proton.me>"
license="GPL-3.0-only"
homepage="https://github.com/pop-os/cosmic-player"
distfiles="https://github.com/pop-os/cosmic-player/archive/refs/tags/${_tag}.tar.gz"
checksum=e84599c423d9a732940c0a98de1f64a3cc37231ec1aa04c8cd01b0584ceec4a3
if [ "$XBPS_LIBC" = "glibc" ]; then
	makedepends+=" libglib-devel"
fi

do_build() {
	$(vopt_if sccache "export RUSTC_WRAPPER=/usr/bin/sccache")
	just build-release
}

do_install() {
	just  --set rootdir ${DESTDIR} install
}
