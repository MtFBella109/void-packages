# Template file for 'cosmic-comp'
pkgname=cosmic-comp
version=1.0.0.beta.7
revision=1
build_options="sccache"
_tag=epoch-${version/.beta/-beta}
build_style=cargo
hostmakedepends="pkg-config"
makedepends="eudev-libudev-devel libseat-devel libxkbcommon-devel libinput-devel pixman-devel libgbm-devel libdisplay-info-devel $(vopt_if sccache "rust-sccache")"
depends="eudev-libudev expat libxkbcommon libdisplay-info libgbm libseat libinput libgcc libdrm libelogind libevdev libwacom libcap libgudev libffi libpcre2 mtdev pixman"
short_desc="TODO: cosmic-comp short_desc"
maintainer="Bella Wagner <belladev109@proton.me>"
license="GPL-3.0-only"
homepage="https://github.com/pop-os/cosmic-comp"
distfiles="https://github.com/pop-os/cosmic-comp/archive/refs/tags/${_tag}.tar.gz"
checksum=409d68283a4cbaf7d6e5aac8c951e30ed9e495ad6eb82334c12bfcb915263cf2

do_build() {
	$(vopt_if sccache "export RUSTC_WRAPPER=/usr/bin/sccache")
	cargo build --release --no-default-features --features "profile-with-tracy"
}

do_install() {
	DESTDIR=${DESTDIR} make install
}
