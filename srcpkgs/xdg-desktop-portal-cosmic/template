build_options="sccache"
hostmakedepends="pkg-config cargo cargo-auditable $(vopt_if sccache "rust-sccache")"
makedepends="libxkbcommon-devel libzstd-devel pipewire-devel clang libglib-devel libgbm-devel"
depends="libgbm libpipewire glib libxkbcommon libdrm expat zlib libmount libffi libpcre2 libblkid xdg-desktop-portal"
