revision=1
_tag=epoch-${version/.beta/-beta}
build_style=gnu-makefile
build_options="sccache"
hostmakedepends="pkg-config"
makedepends="libxkbcommon-devel libgbm-devel eudev-libudev-devel libinput-devel $(vopt_if sccache "rust-sccache")"
depends="expat libxkbcommon libgbm libdrm"
