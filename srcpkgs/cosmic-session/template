# Template file for 'cosmic-session'
pkgname=cosmic-session
version=1.0.0.beta.8
revision=1
_tag=epoch-${version/.beta/-beta}
build_style=cargo
build_options="sccache"
hostmakedepends="just $(vopt_if sccache "rust-sccache")"
makedepends="glib"
depends="pop-fonts"
short_desc="TODO: cosmic-session short_desc"
maintainer="Bella Wagner <belladev109@proton.me>"
license="GPL-3.0-only"
homepage="https://github.com/pop-os/cosmic-session"
distfiles="https://github.com/pop-os/cosmic-session/archive/refs/tags/${_tag}.tar.gz"
checksum=806f1b7631ba7d17df521e9bce700ff75e89a08998ada8afefca68582b33011f

do_build() {
	$(vopt_if sccache "export RUSTC_WRAPPER=/usr/bin/sccache")
	cargo build --release --no-default-features --features autostart
}

do_install() {
	just --set rootdir ${DESTDIR} install
        vmkdir "usr/share/glib-2.0/schemas/"
        cat > ${DESTDIR}/usr/share/glib-2.0/schemas/cosmic.session.gschema.override <<EOF
[org.gnome.desktop.interface:COSMIC]
color-scheme = "prefer-dark"
gtk-theme = "Pop-dark"
icon-theme = "Pop"
cursor-theme = "Pop"
font-name = "Open Sans 11"
document-font-name = "Open Sans 11"
monospace-font-name = "Noto Sans Mono 11"
EOF
}

post_install() {
	glib-compile-schemas ${DESTDIR}/usr/share/glib-2.0/schemas >/dev/null 2>&1
}
