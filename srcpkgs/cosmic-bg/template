# Template file for 'cosmic-bg'
pkgname=cosmic-bg
version=1.0.6
revision=1
build_options="sccache"
archs="x86_64* i686"
build_style=cargo
configure_args="--all"
hostmakedepends="pkg-config just $(vopt_if sccache "rust-sccache")"
makedepends="libxkbcommon-devel mold"
depends="libxkbcommon"
short_desc="COSMIC session service which applies backgrounds to displays"
maintainer="Bella Wagner <belladev109@proton.me>"
license="MPL_2.0"
homepage="https://github.com/pop-os/cosmic-bg"
distfiles="https://github.com/pop-os/cosmic-bg/archive/refs/tags/epoch-${version}.tar.gz"
checksum=567c7fa2d3a8e35997e1105ecf8a9d2c82b5554031c8676f9b20456e6706e010

pre_build() {
	$(vopt_if sccache "export RUSTC_WRAPPER=/usr/bin/sccache")
}

do_install() {
	 just rootdir="${DESTDIR}" cargo-target-dir="target/${RUST_TARGET}" install
}
