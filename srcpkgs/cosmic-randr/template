# Template file for 'cosmic-randr'
pkgname=cosmic-randr
version=1.0.0.beta.8
revision=1
archs="x86_64* i686"
_tag=epoch-${version/.beta/-beta}
build_style=cargo
build_options"sccache"
hostmakedepends="just $(vopt_if sccache "rust-sccache")"
short_desc="Display and configure wayland display outputs"
maintainer="Bella Wagner <belladev109@proton.me>"
license="MPL-2.0"
homepage="https://github.com/pop-os/cosmic-randr"
distfiles="https://github.com/pop-os/cosmic-randr/archive/refs/tags/${_tag}.tar.gz"
checksum=e9b5d74ee717b34188616cf9d0ae3c4d6cd97030867aba8ca3d53b571051daba

do_build() {
	$(vopt_if sccache "export RUSTC_WRAPPER=/usr/bin/sccache")
	just build-release
}

do_install() {
	just rootdir=${DESTDIR} install
}
