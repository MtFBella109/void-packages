# Template file for 'cosmic-launcher'
pkgname=cosmic-launcher
version=1.0.0.beta.9
revision=1
build_options="sccache"
archs="x86_64* i686"
_tag=epoch-${version/.beta/-beta}
hostmakedepends="pkg-config just cargo cargo-auditable $(vopt_if sccache "rust-sccache")"
makedepends="libxkbcommon-devel which"
depends="libxkbcommon pop-launcher"
short_desc="COSMIC App Launcher"
maintainer="Bella Wagner <belladev109@proton.me>"
license="GPL-3.0-only"
homepage="https://github.com/pop-os/cosmic-launcher"
distfiles="https://github.com/pop-os/cosmic-launcher/archive/refs/tags/${_tag}.tar.gz"
checksum=be2e8d5375e0cfd4c07bf6f7315b2130237cfe4fcb958572a8c7c2a2bc8e7140

do_build() {
	$(vopt_if sccache "export RUSTC_WRAPPER=/usr/bin/sccache")
	just build-release
}

do_install() {
	just --set rootdir ${DESTDIR} install
}
