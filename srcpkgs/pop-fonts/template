# Template file for 'pop-fonts'
pkgname=pop-fonts
version=1
revision=2
hostmakedepends="git"
build_style="gnu-makefile"
short_desc="Pop Fonts"
maintainer="Bella Viola Wagner <belladev109@proton.me>"
license="OFL-1.1"
homepage="https://github.com/pop-os/fonts"

do_fetch() {
	if [ -d $wrksrc ]; then
		rm -rf $wrksrc
	fi
	git clone $homepage $wrksrc
}
