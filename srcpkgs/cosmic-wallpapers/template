# Template file for 'cosmic-wallpapers'
pkgname=cosmic-wallpapers
version=1.0.0
revision=2
build_style="gnu-makefile"
hostmakedepends="git git-lfs"
short_desc="COSMIC wallpaper collection"
maintainer="Bella Viola Wagner <belladev109@proton.me>"
license="CC-BY-SA-4.0"
homepage="https://github.com/pop-os/cosmic-wallpapers"
skip_extraction="yes"

do_fetch() {
	if [ -d $wrksrc ]; then
		rm -rf $wrksrc
	fi
	git clone https://github.com/pop-os/cosmic-wallpapers.git $wrksrc
	cd $wrksrc
	git checkout 189c2c63d31da84ebb161acfd21a503f98a1b4c7
	git lfs install --local
	git lfs pull
}

