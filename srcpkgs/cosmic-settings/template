# Template file for 'cosmic-settings'
pkgname=cosmic-settings
version=1.0.0.beta.9
revision=1
archs="x86_64* i686"
_tag=epoch-${version/.beta/-beta}
build_options="sccache"
hostmakedepends="pkg-config just cargo $(vopt_if sccache "rust-sccache")"
makedepends="libxkbcommon-devel eudev-libudev-devel libinput-devel mold pipewire-devel clang17-devel "
depends="accountsservice cosmic-settings-daemon dbus-libs eudev-libudev gettext xkeyboard-config lame libpulseaudio libxkbcommon libpipewire libsndfile libxcb libasyncns libflac libvorbis libogg libmpg123 libXau libXdmcp opus iso-codes power-profiles-daemon"
short_desc="Settings App for COSMIC"
maintainer="Bella Wagner <belladev109@proton.me>"
license="GPL-3.0-only"
homepage="https://github.com/pop-os/cosmic-settings"
distfiles="https://github.com/pop-os/cosmic-settings/archive/refs/tags/${_tag}.tar.gz"
checksum=518f8852c95ca60e798aefca162dc367015038cdde0511fe58dc793b14407824

do_build() {
	$(vopt_if sccache "export RUSTC_WRAPPER=/usr/bin/sccache")
	just build-release
}

do_install() {
	just --set rootdir ${DESTDIR} install
}
