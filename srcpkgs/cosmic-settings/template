# Template file for 'cosmic-settings'
pkgname=cosmic-settings
version=1.0.0.beta.6
revision=1
_tag=epoch-${version/.beta/-beta}
build_options="sccache"
hostmakedepends="pkg-config just cargo"
makedepends="libxkbcommon-devel eudev-libudev-devel libinput-devel pipewire-devel clang17-devel $(vopt_if sccache "rust-sccache")"
depends="accountsservice dbus-libs eudev-libudev gettext NetworkManager-openvpn xkeyboard-config lame libpulseaudio libxkbcommon libpulseaudio libpipewire libsndfile libxcb libasyncns libflac libvorbis libogg libmpg123 libXau libXdmcp opus iso-codes power-profiles-daemon"
short_desc="TODO: cosmic-settings short_desc"
maintainer="Bella Wagner <belladev109@proton.me>"
license="GPL-3.0-only"
homepage="https://github.com/pop-os/cosmic-settings"
distfiles="https://github.com/pop-os/cosmic-settings/archive/refs/tags/${_tag}.tar.gz"
checksum=5fbef2c316f2d6062b4fe5b48a14be27aee51f561cfd15452a7691a0d46fdc2c

do_build() {
	if [ $(vopt_if sccache "true" "false") == "true" ]; then
		export RUSTC_WRAPPER=/usr/bin/sccache
		sccache --start-server
	fi
	just build-release
	$(vopt_if sccache "sccache --stop-server")
}

do_install() {
	just --set rootdir ${DESTDIR} install
}
