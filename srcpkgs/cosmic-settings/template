hostmakedepends="pkg-config just cargo $(vopt_if sccache "rust-sccache")"
makedepends="libxkbcommon-devel eudev-libudev-devel libinput-devel pipewire-devel clang17-devel "
depends="accountsservice dbus-libs eudev-libudev gettext NetworkManager-openvpn xkeyboard-config lame libpulseaudio libxkbcommon libpulseaudio libpipewire libsndfile libxcb libasyncns libflac libvorbis libogg libmpg123 libXau libXdmcp opus iso-codes power-profiles-daemon"
