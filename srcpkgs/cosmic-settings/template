version=1.0.0.beta.7
revision=1
_tag=epoch-${version/.beta/-beta}
build_options="sccache"
hostmakedepends="pkg-config just cargo"
makedepends="libxkbcommon-devel eudev-libudev-devel libinput-devel pipewire-devel clang17-devel $(vopt_if sccache "rust-sccache")"
depends="accountsservice dbus-libs eudev-libudev gettext NetworkManager-openvpn xkeyboard-config lame libpulseaudio libxkbcommon libpulseaudio libpipewire libsndfile libxcb libasyncns libflac libvorbis libogg libmpg123 libXau libXdmcp opus iso-codes power-profiles-daemon"
short_desc="TODO: cosmic-settings short_desc"
