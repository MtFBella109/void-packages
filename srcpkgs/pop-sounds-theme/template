# Template file for 'pop-sounds-theme'
pkgname=pop-sounds-theme
version=5.5.1
revision=1
hostmakedepends="pkg-config meson ninja sassc libglib-devel glib-devel"
short_desc="TODO: pop-fonts short_desc"
maintainer="Bella Wagner <belladev109@proton.me>"
license="GPL-3.0-only"
homepage="https://github.com/pop-os/gtk-theme"
distfiles=${homepage}/archive/refs/tags/v${version}.tar.gz
checksum=080aa631459c941fa18f0facd0265e7d94e3dcf1a0104e62777797e0b2cfe81c

do_build() {
	meson build
	cd build
	ninja
}

do_install() {
	cd build
	DESTDIR=${DESTDIR} ninja install
}

post_install() {
	rm -rf ${DESTDIR}/usr/share/gtk
	rm -rf ${DESTDIR}/usr/share/themes
	rm -rf ${DESTDIR}/usr/share/gnome-shell
}
