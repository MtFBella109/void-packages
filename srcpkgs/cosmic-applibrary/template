# Template file for 'cosmic-applibrary'
pkgname=cosmic-applibrary
version=1.0.0.beta.9
revision=1
build_options="sccache"
archs="x86_64* i686"
_tag=epoch-${version/.beta/-beta}
hostmakedepends="pkg-config just cargo cargo-auditable $(vopt_if sccache "rust-sccache")"
makedepends="libxkbcommon-devel "
depends="libxkbcommon"
short_desc="Cosmic App Library"
long_desc="Cosmic App Library is an application launcher for the COSMIC desktop that lists all installed applications in a grid."
maintainer="Bella Wagner <belladev109@proton.me>"
license="GPL-3.0-only"
homepage="https://github.com/pop-os/cosmic-applibrary"
distfiles="https://github.com/pop-os/cosmic-applibrary/archive/refs/tags/${_tag}.tar.gz"
checksum=8fc53de45fcbf6053e41a66b18ec1ff85180f6e4aa321e5a70cc36d8707feb25

do_build() {
	$(vopt_if sccache "export RUSTC_WRAPPER=/usr/bin/sccache")
	just build-release
}

do_install() {
	just rootdir=${DESTDIR} install
}
