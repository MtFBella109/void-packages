# Template file for 'cosmic-osd'
pkgname=cosmic-osd
version=1.0.0.beta.6
revision=1
_tag=epoch-${version/.beta/-beta}
build_style=gnu-makefile
build_options="sccache"
hostmakedepends="cargo cargo-auditable pkg-config"
makedepends="libxkbcommon-devel pulseaudio-devel pipewire-devel clang17-devel eudev-libudev-devel libinput-devel $(vopt_if sccache "rust-sccache")"
depends="dbus-libs eudev-libudev lame libpulseaudio libxkbcommon libpulseaudio libsndfile libxcb libasyncns libflac libvorbis libogg libmpg123 libXau libXdmcp opus"
short_desc="TODO: cosmic-osd short_desc"
maintainer="Bella Wagner <belladev109@proton.me>"
license="GPL-3.0-only"
homepage="https://github.com/pop-os/cosmic-osd"
distfiles="https://github.com/pop-os/cosmic-osd/archive/refs/tags/${_tag}.tar.gz"
checksum=f52fccf070241540039bd8800d8b79eac31e41c23ae4bc623fc3d35b4d79c91f

if [ $(vopt_if sccache "true" "false") == "true" ]; then
	pre_build() {
		export RUSTC_WRAPPER=/usr/bin/sccache
		sccache --start-server
	}

	post_build() {
		sccache --stop-server
	}
fi
