# Template file for 'cosmic-initial-setup'
pkgname=cosmic-initial-setup
version=1.0.0.beta.1.1
revision=7
wrksrc=${pkgname}-${version}
_tag=epoch-${version/.beta/-beta}
build_style=cargo
hostmakedepends="pkg-config just git git-lfs"
makedepends="eudev-libudev-devel libxkbcommon-devel openssl-devel flatpak-devel libinput-devel"
depends="locale1 localectl"
short_desc="TODO: cosmic-initial-setup short_desc"
maintainer="Bella Wagner <belladev109@proton.me>"
license="GPL-3.0-only"
homepage="https://github.com/pop-os/cosmic-initial-setup"
#distfiles="https://github.com/pop-os/cosmic-initial-setup/archive/refs/tags/${_tag}.tar.gz"
#checksum=b7b3f3e9836929f715f74bd156481bf4334f261d6d448f8ac85894a5d6c2d9a5

do_fetch() {
	if [ -d $wrksrc ]; then
		rm -rf $wrksrc
	fi
	git clone $homepage $wrksrc
	cd $wrksrc
	git checkout 7d5c21cf1bd725a4264f53c990e5cc1b9da20985
	git lfs install --local
	git lfs pull
}

do_build() {
	just build-release
}

do_install() {
	just --set rootdir ${DESTDIR} install
}
